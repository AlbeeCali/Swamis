@model Sawtooth.Swamis.Models.DailyTriggersModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Triggers</h2>
<p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.TradeDate, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.TradeDate, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="View Triggers" class="btn btn-default" />
            </div>
        </div>
    </div>
}


</p>
<table class="table">
    <tr>
        <th>Trade Type</th>
        <th>Code</th>
        <th>Contract</th>
        <th>Price</th>
        <th></th>
        <th></th>
    </tr>
    @if (Model.Patterns != null)
    {
        foreach (var pp in Model.Patterns)
        {
            <tr>
                <td>
                    @Html.DisplayFor(x => pp.TradeType)
                </td>
                <td>
                    @Html.DisplayFor(x => pp.Code)
                </td>
                <td>
                    @Html.DisplayFor(x => pp.Contract)
                </td>
                <td>
                    @Html.DisplayFor(x => pp.Price)
                </td>
                <td>
                    @Html.DisplayFor(x => pp.Description)
                </td>
                <td>
                    @Html.DisplayFor(x => pp.Extra)
                </td>
            </tr>
        }
    }
</table>
<p>
    |
</p>



@section Scripts {
<script type="text/javascript">

</script>
}
